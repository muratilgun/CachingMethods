@model List<string>
@{
    ViewData["Title"] = "Index";
}
<form method="post" asp-action="Add" enctype="application/x-www-form-urlencoded">
    <input type="text" name="name" />
    <button type="submit">Kaydet</button>
    <button type="submit"><a asp-action="DeleteFirstItem">Baştan Sil</a></button>
</form>

@foreach (var item in Model)
{
    <h2>@item <a asp-controller="ListType" asp-action="DeleteItem" asp-route-name="@item">sil</a></h2>
}